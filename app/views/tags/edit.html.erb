<div class="container">
  <h1>Tags</h1>
  <h2>Edit <%= @tag.name%></h2>

  <%= render('layouts/errors', :object => @tag) %>

  <form action="/tags/<%= @tag.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <%= render('form') %>
    <button>Update Tag</button>
  </form>
</div>
