<h1>Recipes</h1>

<ul>
  <% @recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>

<h2>Tags</h2>
<ul>
  <% @tags.each do |tag| %>
    <li> <%= tag.name %></li>
    <% end %>
</ul>

<h2>Search</h2>

<form action="/" method="get">
  <label>Search:</label>
  <input name="search[query]" type="text">
  <button>Search</button>
</form>

<% if !@results.nil? %>

<h2>Results</h2>

  <ul>
    <% @results.each do |result| %>
      <li><%= result.name %></li>
    <% end %>
  </ul>

<% end %>
