<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Recipes</h1>

      <dl>
        <% @recipes.each do |recipe| %>
          <dt><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></dt>
        <% end %>
      </dl>

      <h2>Tags</h2>
      <dl>
        <% @tags.each do |tag| %>
          <dt> #<%= tag.name %></dt>
          <% end %>
          <a href= "/tags/new"><dt>Add Tag</dt></a>
      </dl>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <form class="form-inline" action="/" method="get">
        <div class="form-group">
          <input class="form-control" name="search[query]" placeholder="Enter Search"type="text">
          <button class="btn btn-default" >Search</button>
        </div>
      </form>
    </div>
  </div>

  <% if !@results.nil? %>

  <h2>Results</h2>

    <ul>
      <% @results.each do |result| %>
        <li><%= result.name %></li>
      <% end %>
    </ul>

  <% end %>
</div>
