<div class="container">
  <a href ="/"><h1>Recipes</h1></a>

  <h3><%= @recipe.name %></h3>
  <p><%= @recipe.text%></p>
</div>

<footer>
  <div class="container">
    <!-- <div class="tags"> -->
      <h3>Tags:</h3>
      <dl>
        <% @recipe.tags.each do |tag| %>
          <dt>#<%= tag.name %></dt>
        <% end %>
      </dl>
    <!-- </div> -->
    <a href="/recipes/<%= @recipe.id %>/edit">Edit</a>
    <a href="/recipes/<%= @recipe.id %>" data-confirm="You sure?" data-method="delete" rel="nofollow">Delete</a>
  </div>
</footer>
